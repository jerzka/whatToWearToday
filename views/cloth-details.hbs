<main class="container w-100 w-md-50 bg-white text-start">
    <h1 class="px-5 py-3 text-center">Your <span class="span-bg text-white">new</span> cloth</h1>

    <div class="row cols-2 p-4 text-start">
        <div class="col-10">
            <h4 class="text-capitalize">{{name}}</h4>
        </div>
        <div class="col-2 form-check form-custom-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="availabilityCheck"
                checked="{{availability}}" />
        </div>
    </div>

    <div class="row col-1 seasons-detail p-4">
        <ul class="list-group col-12 p-0 justify-content-start">
            {{#each seasons as |season|}}
            {{#each season}}
            <li class="list-group-item {{#ifeq this true }} seasons-active {{/ifeq}}"> {{@key}} </li>
            {{/each}}
            {{/each}}
        </ul>
    </div>

    <div class="row cols-2 align-items-center p-4">
        <div class="col-6">
            <img class="w-100 bg-light" src="{{photo}}" alt="...">
        </div>
        <div class="col-6">
            <ul class="ul-colors-swatch">
                {{#each colors}}
                <li style="background-color: #{{this}}"></li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="p-4">
        <h4>Styles</h4>
        <ul class="list-group-custom col-12 p-0 justify-content-start">
            {{#each styles}}
            <li class="list-group-item">{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="p-4">
        <h4>Fabrics</h4>
        <div class="fabrics-list-group-container container ">
            {{#each fabrics as |layer|}}
            {{#each layer}}
            <ul class="list-group-half">

                <li class="list-group-item">{{@key}}</li>
                <li class="list-group-item">{{this}}</li>
            </ul>
            {{/each}}
            {{/each}}
        </div>
    </div>

    {{!-- <h4>Washing method</h4> --}}
    <div class="container col-md-6 col-lg-4 justify-content-center pb-5">
        <a id="editCloth" type="button" class="btn btn-primary btn-lg w-100" 
        href="/cloth-form/{{id}}">Edit cloth</a>
    </div>

    <div class="p-4 pb-5">
        <h4>Goes well with</h4>
        <img class="w-25 bg-light" src="{{photo}}" alt="...">
        <img class="w-25 bg-light" src="{{photo}}" alt="...">
        <img class="w-25 bg-light" src="{{photo}}" alt="...">
    </div>

    <hr />
</main>