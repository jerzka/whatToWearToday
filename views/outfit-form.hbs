<main id="custom-form" class="container w-100 w-md-75">
    <h1 class="p-3"><span class="span-bg text-white">
            {{#if edit}}Edit</span>{{else}} Add</span> new {{/if}} outfit
    </h1>

    <form class="px-3" enctype="multipart/form-data">
        <div class="row justify-content-between">
            <div class="form-group-custom border border-secondary border-opacity-25 my-5">
                <div class="form-group-header">
                    <h4>Basic info</h4>
                </div>
                <div class="row p-5 align-items-end">
                    <div class="col-12 col-md-8">
                        <label for="clothName" class="form-label ">Your outfit name</label>
                        <input type="text" class="form-control" id="clothName" 
                            value={{#if edit}}"{{name}}"{{else}}""{{/if}} />
                    </div>
                    <div class="col-12 col-md-4 mt-3 p-0 text-start">
                        <div class="form-check form-custom-switch">
                            <label class="form-check-label pt-2" for="availabilityCheck">Private/Public</label>
                            <input class="form-check-input" type="checkbox" role="switch" id="privacyCheck"
                                value={{#if edit}}{{privacy}}{{else}}true{{/if}} />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-between">
            <div id="seasons" class="col-12 col-md-5 form-group-custom border border-secondary border-opacity-25 my-5">
                <div class="form-group-header">
                    <h4>Season</h4>
                </div>
                <div class="row row-cols-4 pt-5">
                    {{#if edit}}
                        {{#each seasons as |season|}}
                            {{#each season}}
                            <div class="form-custom-check col pb-3">
                                <input type="checkbox" class="form-check-input checkbox-xl" id="seasonSpring" value={{@key}}
                                    {{#ifeq this true}} checked {{/ifeq}}>
                                <label class="form-check-label d-block text-capitalize" for="season-spring">{{@key}}</label>
                            </div>
                            {{/each}}
                        {{/each}}
                    {{else}}

                    <div class="form-custom-check col pb-3">
                        <input type="checkbox" class="form-check-input checkbox-xl" id="seasonSpring" value="spring">
                        <label class="form-check-label d-block" for="season-spring">Spring</label>
                    </div>
                    <div class="form-custom-check col">
                        <input type="checkbox" class="form-check-input checkbox-xl" id="seasonSummer" value="summer">
                        <label class="form-check-label d-block" for="season-summer">Summer</label>
                    </div>
                    <div class="form-custom-check col">
                        <input type="checkbox" class="form-check-input checkbox-xl" id="season-fall" value="fall">
                        <label class="form-check-label d-block" for="season-fall">Fall</label>
                    </div>
                    <div class="form-custom-check col">
                        <input type="checkbox" class="form-check-input checkbox-xl" id="season-winter" value="winter">
                        <label class="form-check-label d-block" for="season-winter">Winter</label>
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="col-12 col-md-6 form-group-custom border border-secondary border-opacity-25 my-5">

                <div class="form-group-header">
                    <h4>Your cloth style</h4>
                </div>
                <div class="row pt-5 justify-content-around">
                    <div class="col-10 p-0 px-3">
                        <select id="styleOpt" class="form-select" aria-label="select cloth style">
                            <option value="">-- Choose an style --</option>
                            <option value="casual">Casual</option>
                            <option value="elegant">Elegant</option>
                            <option value="sport">Sport</option>
                            <option value="outdoor">Outdoor</option>
                            <option value="vintage">Vintage</option>
                            <option value="rock">Rock</option>
                        </select>
                    </div>
                    <div class="col-2 p-0">
                        <button id="addStyleBtn" type="button" class="btn btn-primary">
                            <i class="fa fa-plus fa-lg text-white" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
                <div id="styles" class="row p-5">
                {{#if edit}}
                    {{#each styles}}
                    <ul class="list-group-custom col p-0 justify-content-center">
                        <li class="list-group-item" value={{this}}>{{this}}</li>
                        <button id="delete-{{this}}" type="button" class="btn btn-delete btn-primary">
                            <i class="fa fa-minus fa-lg text-white" aria-hidden="true"></i>
                        </button>
                    </ul>
                    {{/each}}
                {{/if}}
                </div>
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-12 form-group-custom border border-secondary border-opacity-25 my-5">
                <div class="form-group-header">
                    <h4>Your clothes</h4>
                </div>
                <div class="row row-cols-2 py-5 align-items-end">
                    <div class="col-12">
                        {{>carousel}}
                    </div>
                </div>
            </div>
        </div>

        <div class="w-100 bg-light ">

        </div>

        {{#if edit}}
            <div id="outfitID" hidden>{{id}}</div>
        {{/if}}

        <div class="container col-md-6 col-lg-4 justify-content-center pb-5">
            <button id="submitCloth" type="button" class="btn btn-primary btn-lg w-100">
                {{#if edit}}Save outfit{{else}}Add outfit{{/if}}</button>
        </div>
    </form>
    <hr />
</main>